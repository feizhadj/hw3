<h1><%= @place.name %></h1>
<p><%= @place.description %></p>

<h2>Comments</h2>
<% @place.comments.each do |comment| %>
  <p><%= comment.content %></p>
<% end %>

<%= form_for [@place, Comment.new] do |f| %>
  <%= f.label :content, 'New Comment' %>
  <%= f.text_area :content %>
  <%= f.submit 'Add Comment' %>
<% end %>

<%= link_to 'Edit', "/place/edit" %> |
<%= link_to 'Back', "/place/new" %>
