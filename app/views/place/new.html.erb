<h1>New Place</h1>

<%= form_for @place, html: { multipart: true } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :image, 'Upload Image' %>
  <%= f.file_field :image %>

  <%= f.submit 'Create' %>
<% end %>

<%= link_to 'Back', places_path %>
